<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style/common.css">
    <script src="../javascript/lazy-images.js"></script>
    <script src = ../javascript/listener-open.js></script>
    <script src="../javascript/profile_features.js"></script>
    <script src="../javascript/search_valid.js"></script>
    <title>Listener's Home Page</title>
</head>
<body>
    <div class="container">
        <div class="left">
            <div class="logo-search">
                <a href="#"><img src="images/vintage_logo.jpg" alt="Site Logo"></img></a>
                <input type="text" placeholder="search">
                <button type="submit">Search</button>
            </div>
            
            <aside class="user-feat">
                <div>
                    <a href="/">
                        <img src="images/book.png" alt="book"></img>
                        <p>Home</p>
                    </a>
                </div>
                <div>  
                    <a href="#">
                        <img src="images/help.png" alt="help"></img>
                        <p>Help</p>
                    </a>
                </div>
                <div id="listener-closed">  
                    <!-- <a href="#"> -->
                        <img src="images/help.png" alt="help"></img>
                        <p>Listener</p>
                        <img src="images/dropdown_arrow.png" alt="dropdown arrow">
                    <!-- </a> -->
                </div>
            </aside>
        </div>
        <div class="right">
            <section class="body">
                <div class="profile-feat">
                    <button class="control-buttons" type="submit" name="backwards"><img src="images/skip_backward.png" alt="skip backwards"></img></button>
                    <button class="control-buttons" type="submit" name="pause"><img id="play" src="images/pause_button.png" alt="pause"></img></button>
                    <button class="control-buttons" type="submit" name="forward"><img src="images/skip_forward.png" alt="skip forward"></img></button>
                    <button type="submit" name="muted"><img src="images/muted.png" alt="muted"></img></button>
                    <input type="range"></input>
                    <button>Username</button>
                    <button id="profile-pic" type="submit"><img src="images/profile.png" alt="profile icon"></button>
                </div>
                <div class="station-section">
                    <section>
                        <h2>Top Hits:</h2>
                        <% for (let station of topStations) { %>
                            <a href="<%= station.url %>">
                                <img src="<%= station.img %>" alt="station"></img>
                                <p class="station-name"><%= station.name %></p>
                                <p class="dj-name"><%= station.dj %></p>
                            </a>
                        <% } %>
                    </section>
                    <section>
                        <h2>Your Favorites:</h2>
                        <% for (let station of favoriteStations) { %>
                            <a href="<%= station.url %>">
                                <img src="<%= station.img %>" alt="station"></img>
                                <p class="station-name"><%= station.name %></p>
                                <p class="dj-name"><%= station.dj %></p>
                            </a>
                        <% } %>
                    </section>
                    <section>
                        <h2>Your Recommended:</h2>
                        <% for (let station of recStations) { %>
                            <a href="<%= station.url %>">
                                <img src="<%= station.img %>" alt="station"></img>
                                <p class="station-name"><%= station.name %></p>
                                <p class="dj-name"><%= station.dj %></p>
                            </a>
                        <% } %>
                    </section>
                </div>
            </section>
        </div>

        <footer class="socials">
            <a href="#"><img src="images/copyright.png" alt="copyright">Copyright Date</a>
            <a href="#"><img src="images/instagram.png" alt="instagram logo">Instagram</a>
            <a href="#"><img src="images/twitter.png" alt="twitter logo">Twitter</a>
            <a href="#"><img src="images/facebook.png" alt="facebook logo">Facebook</a>
        </footer>
    </div>
</body>
</html>